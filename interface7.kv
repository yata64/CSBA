<Quadro>:  
    orientation: 'vertical'

    Label:
        id: mensagem
        font_size: 15
        text: ''
        markup: True  

    BoxLayout:
        spacing: 10
        Button:
            text: "0"
            on_press: op1.text += self.text  # ou outra lógica
        Button: 
            text: "1"
            on_press: op1.text += self.text
        Button:
            text: "2"
            on_press: op1.text += self.text
        Button:
            text: "3"
            on_press: op1.text += self.text  # ou outra lógica
        Button: 
            text: "4"
            on_press: op1.text += self.text
        Button:
            text: "5"
            on_press: op1.text += self.text
        Button:
            text: "6"
            on_press: op1.text += self.text  # ou outra lógica
        Button: 
            text: "7"
            on_press: op1.text += self.text
        Button:
            text: "8"
            on_press: op1.text += self.text
        Button:
            text: "9"
            on_press: op1.text += self.text

    BoxLayout:
        Label:
            text: 'Operando 1: '
        TextInput:
            id: op1
            text: ''
            multiline: False
        Label:
            text: 'Operando 2:'
        TextInput:
            id: op2
            text: ''
            multiline: False

    BoxLayout:  
        Label:
            text: 'Resultado'
        Label:
            id: resultado
            text: '0'
            font_size: 30

    BoxLayout:  
        Button:
            text: ' + '
            on_release: root.somar()
        Button:
            text: ' - '
            on_release: root.subtrair()
        Button:
            text: ' X '
            on_release: root.multiplicar()
        Button:
            text: ' / '
            on_release: root.dividir()
        Button:
            text: 'CE'
            on_release: root.limpar()
        Button:
            text: 'OFF'
            on_release: root.sair()
